{
  "name": "rulehunt",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "dev:worker": "wrangler dev",
    "build": "node scripts/generate-build-info.cjs && tsc -b && vite build && pnpm run copy:resources",
    "copy:resources": "mkdir -p dist/resources && cp resources/c4-orbits.json dist/resources/",
    "preview": "pnpm run build && vite preview",
    "deploy": "wrangler pages deploy dist --project-name=rulehunt",
    "check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "generate:c4-orbits": "tsx scripts/generate-c4-orbits.ts && pnpm run format",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db-local:init": "bash scripts/local-db-init.bash",
    "db-local:run": "npx wrangler pages dev dist --d1=DB",
    "db-prod:migrate": "wrangler d1 migrations apply rulehunt-db --remote",
    "db-prod:verify": "wrangler d1 execute rulehunt-db --remote --command 'PRAGMA table_info(runs);'",
    "db-prod:download": "./scripts/db-download.js",
    "cloc": "cloc . --exclude-dir=node_modules,dist,build,.next,out"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/node": "^22.8.7",
    "@vitest/coverage-v8": "^3.2.4",
    "gpu.js": "^2.16.0",
    "jsdom": "^27.0.0",
    "puppeteer": "^24.25.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.1",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "chartjs-chart-error-bars": "^4.4.5"
  }
}
